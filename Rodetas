FROM ubuntu:18.04
FROM ubuntu:16.04

# Dependencias
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    git \
    qt5-default \
    sudo \
    protobuf-compiler \ 
    g++ \
    libzmqpp3 \
    libzmqpp-dev \
    protobuf-compiler\
    libprotobuf-dev \
    libboost-all-dev\
    libgtkmm-3.0-dev

# Rodetas repository git

RUN git clone https://github.com/rodetas/vsss-rodetas-LARC-2020-FiraSIM.git
RUN cd vsss-rodetas-LARC-2020-FiraSIM

# Run Rodetas build_test.sh 

COPY ./build_test.sh /
RUN chmod +x /build_test.sh
ENTRYPOINT ["/build_test.sh"]
RUN ./build_test.sh

# Clean apt

RUN apt-get clean
