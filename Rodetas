FROM ubuntu:18.04

# Dependencias
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    git \
    qt5-default \
    sudo \
    protobuf-compiler \
    && apt-get clean

# Rodetas

RUN sudo apt-get -y install \ 
    git \
    g++ \
    libzmqpp3 \
    libzmqpp-dev \
    protobuf-compiler\
    libprotobuf-dev \
    git clone https://github.com/SIRLab/VSS-Core.git \
    cd VSS-Core \
    git submodule init; \
    git submodule update; \
    bash scripts/protos.sh \
    mkdir -p build \
    cd build \
    cmake -DRELEASE=ON .. \
    make \
    sudo make install \
    cd ../..

RUN sudo apt-get -y install \
    g++ \
    cmake \
    protobuf-compiler\
    libprotobuf-dev\
    libboost-all-dev\
    libgtkmm-3.0-dev \
    mkdir build \
    cd build \
    cmake .. \
    make
