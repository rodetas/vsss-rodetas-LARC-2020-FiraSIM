FROM ubuntu:18.04
FROM ubuntu:16.04

# Dependencias
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    git \
    qt5-default \
    sudo \
    protobuf-compiler \ 
    g++ \
    libzmqpp3 \
    libzmqpp-dev \
    protobuf-compiler\
    libprotobuf-dev \
    libboost-all-dev\
    libgtkmm-3.0-dev

# Cloning VSS-Core Repository via docker

RUN git clone -b docker https://github.com/SIRLab/VSS-Core.git
RUN cd VSS-Core
RUN git submodule init;
RUN git submodule update;;

# Clean apt

RUN apt-get clean
